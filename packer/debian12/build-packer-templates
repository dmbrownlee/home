#!/usr/bin/ansible-playbook
---
- name: Build packer templates
  hosts: localhost
  vars_files:
    - site_data
  tasks:
    - name: Have packer build Proxmox templates
      ansible.builtin.include_tasks: build-packer-template.yml
      loop: "{{ templates }}"
      loop_control:
        label: "{{ item.name }} ({{ item.id }})"

