# Create the available windows
screen -t vim /bin/bash
screen -t test /bin/bash
screen -t git /bin/bash

# Bind keys (like vim) to make navigation between windows easier
bind h focus left
bind j focus down
bind k focus up
bind l focus right

# Split the screen into three regions and assign the default windows to each
split -v
select 0
focus right
split
select 1
focus down
select 2
focus left
